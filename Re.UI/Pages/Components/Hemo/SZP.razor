@using Re.Core.Models
@using Re.UI.Data

<MudGrid>
    <MudPaper Style="margin: 15px 0; margin-top:30px; height: 900px;" Width="1190px">
        <MudText Style="margin-top:10px; margin-left:20px;" Typo="Typo.h6">@Name</MudText>
        <MudGrid Style="margin-top:10px; margin-left:20px;">
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Ф.И.О. реципиента</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.FIO" Style="width:980px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>№ карты:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Number" Style="width:1050px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Группа крови репициента</MudText></MudItem>
                <MudItem Style="margin-top:-20px;">
                    <MudSelect T="string" AnchorOrigin="Origin.BottomCenter" Style="width:925px">
                        @foreach (var item in Group)
                        {
                            <MudSelectItem Value="@item" />
                        }
                    </MudSelect>
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Фенотип</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Phenotype" Style="width:1055px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Где определяли резус:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Place" Style="width:950px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Показания к гемотрансфузии:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Indication" Style="width:890px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Трансфузионный анамнез:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Anamnesis" Style="width:915px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Наименование компонента:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Component" Style="width:905px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Изготовитель:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Mfr" Style="width:1010px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Дата заготовки:</MudText></MudItem>
                <MudItem><MudDatePicker Style="width:150px; margin-top:-5px;" @bind-Date="zagdate" /></MudItem>
                <MudItem Style="margin-top:5px;"><MudText>Годна до:</MudText></MudItem>
                <MudItem> <MudDatePicker Style="width:150px; margin-top:-5px;" @bind-Date="enddate" /></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>N контейнера:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.NumberCont" Style="width:1010px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Объем:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Volume" Style="width:1060px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Код донора:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Code" Style="width:1020px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Группа крови донора:</MudText></MudItem>
                <MudItem Style="margin-top:-20px;">
                    <MudSelect T="string" AnchorOrigin="Origin.BottomCenter" Style="width:945px">
                        @foreach (var item in GroupDonor)
                        {
                            <MudSelectItem Value="@item" />
                        }
                    </MudSelect>
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Реактивы:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Reagents" Style="width:1030px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Пробы на совместимость:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Compatibility" Lines="2" Style="width:905px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Биологическая проба:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.BiologicalSample" Style="width:937px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Способ трансфузии:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Transfusion" Style="width:953px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Осложнения:</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Complications" Style="width:1005px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem Style="margin-top:5px;"><MudText>Пробы на совместимость:</MudText></MudItem>
                <MudGrid Style="margin-top:-20px; margin-left:530px;">
                    <MudText>АД</MudText>
                    <MudText Style="margin-left:145px;">ЧСС</MudText>
                    <MudText Style="margin-left:150px;">Т</MudText>
                    <MudText Style="margin-left:100px;">Диурез, цвет мочи</MudText>
                </MudGrid>
            </MudGrid>
            <MudGrid Style="margin-left:255px; margin-top:5px;">
                <MudItem Style="margin-top:5px;"><MudText>перед переливанием</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.AD" Style="width:150px"></MudInput></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.HR" Style="width:150px"></MudInput></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.T" Style="width:150px"></MudInput></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Diuresis" Style="width:150px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid Style="margin-left:283px;">
                <MudItem Style="margin-top:5px;"><MudText>через 1 час после</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.ADhafter" Style="width:150px"></MudInput></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.HRhafter" Style="width:150px"></MudInput></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Thafter" Style="width:150px"></MudInput></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Diuresishafter" Style="width:150px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid Style="margin-left:275px;">
                <MudItem Style="margin-top:5px;"><MudText>через 2 часа после</MudText></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.AD2hafter" Style="width:150px"></MudInput></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.HR2hafter" Style="width:150px"></MudInput></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.T2hafter" Style="width:150px"></MudInput></MudItem>
                <MudItem><MudInput T="string" Variant="Variant.Text" Text="@szp.Diuresis2hafter" Style="width:150px"></MudInput></MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem><MudText>Врач</MudText></MudItem>
                <MudItem>
                    <MudSelect T="string" AnchorOrigin="Origin.BottomCenter" Style="margin-top:-8px; width:1070px;">
                        @foreach (var item in Doctor.OrderBy(x => x))
                        {
                            <MudSelectItem Value="@item" />
                        }
                    </MudSelect>
                </MudItem>
            </MudGrid>
        </MudGrid>
    </MudPaper>
</MudGrid>

