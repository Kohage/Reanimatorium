@using Re.Core.Models
@using Re.UI.Data

<MudPaper Style="padding: 20px; margin: 15px 0">
    <MudText style="margin-top: 15px; font-weight: bolder;">
        <MudGrid Justify="Justify.FlexStart" Style="align-items: flex-end;">
        
            <MudItem xs="6">
                <MudTextField  T="string" Label="Пациент:" Variant="Variant.Text" Text="@patient.FIO"></MudTextField>
            </MudItem>

            <MudItem xs="2">
                <MudText Typo="Typo.subtitle1"> доставлен в ОАР </MudText>
            </MudItem>
        </MudGrid>

        <MudGrid Justify="Justify.FlexStart" Style="align-items: flex-end;">

            <MudItem xs="0">
                <MudText Typo="Typo.subtitle1"> из </MudText>
            </MudItem>

            <MudItem xs="4">
                <MudTextField  T="string" Label="Адрес:" Variant="Variant.Text" Text="@patient.Adress"></MudTextField>
            </MudItem>

            <MudItem xs="0">
                <MudText Typo="Typo.subtitle1"> С данными анмнеза и/б ознакомлен. </MudText>
            </MudItem>

        </MudGrid>

        <MudGrid Justify="Justify.FlexStart" Style="align-items: flex-end;">
            <MudItem>
                <MudText Typo="Typo.subtitle1"> Отмечается выраженный болевой синдром,  </MudText>
            </MudItem>
            <MudItem xs="2">
                <MudSelect T="string" Label="ВАШ - " AnchorOrigin="Origin.BottomCenter">
                    <MudSelectItem Value="@("1 б.")" />
                    <MudSelectItem Value="@("2 б.")" />
                    <MudSelectItem Value="@("3 б.")" />
                    <MudSelectItem Value="@("4 б.")" />
                    <MudSelectItem Value="@("5 б.")" />
                    <MudSelectItem Value="@("6 б.")" />
                    <MudSelectItem Value="@("7 б.")" />
                </MudSelect>
            </MudItem>

            <MudItem xs="2">
                <MudNumericField @bind-Value="@patient.ArtPres" Label="АД" HelperText="мм рт. ст." Variant="Variant.Outlined" />
            </MudItem>

        </MudGrid>

        <MudItem xs="6">
            
        </MudItem>
    </MudText>
</MudPaper>

@code{
    Patient patient = new Patient();

}