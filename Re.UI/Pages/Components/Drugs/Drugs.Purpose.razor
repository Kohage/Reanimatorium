@using Re.Core.Models
@using Re.UI.Data

<MudGrid Justify="Justify.FlexStart">
    <MudItem>
        <MudDatePicker style="width: 150px;" Label="Дата"  @bind-Date="date"/>
    </MudItem>
    <MudItem>
        <MudTimePicker style="width: 150px;" Label="Время"  @bind-Time="time"/>
    </MudItem> 
</MudGrid>

MudGrid>
    <MudItem xs="8">
        @* Опциональная вкладка "Пациент доставлен в ...." *@
        @if(isPatient && patient != null)
        {
            <Prot_Standard_CentralVein Protocol="Patient" />

        }
        @* Опциональная вкладка "Синдро ВАШ..." *@
        @if(isSyndrom && syndrom != null)
        {
           <Prot_Standard_Arteria Protocol="Syndrom" />
        }
    </MudItem> 
    

@code{

    Syndrom? syndrom;
    Patient? patient;
    DateTime? date = DateTime.Now;
    TimeSpan? time = DateTime.Now.TimeOfDay;

    bool isPatient, isSyndrom;

     void PatientToggled(bool value)
    {
       if(value)
       {
            if(patient == null)
            {
                patient = new Patient();
            }
       }
       isPatient = value;
    }

    void SyndromToggled(bool value)
    {
       if(value)
       {
            if(syndrom == null)
            {
                syndrom = new Syndrom();
            }
       }
       isSyndrom = value;
    }
}