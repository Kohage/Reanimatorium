@using Re.Core.Models
@using Re.UI.Data


<MudGrid>
    <MudItem xs="8">
        <MudGrid Spacing="10" Justify="Justify.FlexStart">
            <MudItem>
                <MudDatePicker style="width: 150px;" Label="Дата" @bind-Date="date" />
            </MudItem>
        </MudGrid>
        <MudGrid Spacing="10" Justify="Justify.FlexStart">
            <MudItem>
                <MudTimePicker style="width: 150px;" Label="Время" @bind-Time="time" />
            </MudItem>
        </MudGrid>

        <MudPaper Style="padding: 10px; margin: 15px 0; width:150%">

            @if (cond != null)
            {
                <MudSelect Style="width:50%" T="string" Label="Состояние" AnchorOrigin="Origin.BottomCenter">
                    @foreach (var condit in cond.conditions)
                    {
                        <MudSelectItem Value="@condit" />
                    }
                </MudSelect>

            }

            <MudGrid>

                <MudItem Style="width: 10%;padding: 66px 25px;" Class="d-flex flex-column justify-end"><MudText>Жалобы</MudText></MudItem>

                @if (complaint != null)
                {
                    <MudItem Style="width: 30%; padding: 35px 6px;">

                        <MudSelect T="string" Label="" AnchorOrigin="Origin.BottomCenter">
                            @foreach (var comp in complaint.complaints)
                            {
                                <MudSelectItem Value="@comp" />
                            }
                        </MudSelect>

                    </MudItem>
                }
                <MudItem Style="width: 40%; padding: 35px 6px;">

                    <MudTextField T="string" Label="Жалобы на" Variant="Variant.Text" Text="@complaint.complaintAbout" />

                </MudItem>

                <MudItem Style="width: 10%; padding: 60px 0px;">

                    <MudSwitch Class="d-flex justify-end" @bind-Checked="@vash" Color="Color.Primary"
                               Label="ВАШ - "></MudSwitch>
                </MudItem>
                @if (vash)
                {
                    <MudItem Style="width: 6%; padding: 35px 6px;">
                        <MudSelect T="string">
                            @foreach (var vashs in standart.VASH)
                            {
                                <MudSelectItem Style="margin-bottom: 15px;" Value="@vashs" />
                            }
                        </MudSelect>
                    </MudItem>
                }

            </MudGrid>

            @if (Consience != null)
            {
                <MudSelect Style="width:50%" T="string" Label="Сознание" AnchorOrigin="Origin.BottomCenter">
                    @foreach (var cons in Consience.conscience)
                    {
                        <MudSelectItem Value="@cons" />
                    }
                </MudSelect>

            }


            <MudGrid>

                <MudItem Style="width: 10%;padding: 66px 25px;" Class="d-flex flex-column justify-end"><MudText>RASS</MudText></MudItem>

                @if (rass != null)
                {
                    <MudItem Style="width: 25%; padding: 35px 6px;">

                        <MudSelect T="string" Label="" AnchorOrigin="Origin.BottomCenter">
                            @foreach (var rs in rass.RASS)
                            {
                                <MudSelectItem Value="@rs" />
                            }
                        </MudSelect>

                    </MudItem>
                }
                <MudItem Style="width: 65%; padding: 35px 6px;">

                    <MudTextField T="string" Label="" Variant="Variant.Text" Text="@rass.RASSthis" />

                </MudItem>

            </MudGrid>

            @if (skins != null)
            {
                <MudSelect Style="width:50%" T="string" Label="Кожные покровы" AnchorOrigin="Origin.BottomCenter">
                    @foreach (var sk in skins.skin)
                    {
                        <MudSelectItem Value="@sk" />
                    }
                </MudSelect>

            }

            @if (hymd != null)
            {
                <MudSelect Style="width:50%" T="string" Label="Влажность" AnchorOrigin="Origin.BottomCenter">
                    @foreach (var hm in hymd.humidity)
                    {
                        <MudSelectItem Value="@hm" />
                    }
                </MudSelect>
            }
            @if (clr != null)
            {
                <MudSelect Style="width:50%" T="string" Label="Цвет" AnchorOrigin="Origin.BottomCenter">
                    @foreach (var cl in clr.colorskin)
                    {
                        <MudSelectItem Value="@cl" />
                    }
                </MudSelect>
            }

        </MudPaper>

    </MudItem>

</MudGrid>






@code {

    DateTime? date = DateTime.Now; //Дата
    TimeSpan? time = DateTime.Now.TimeOfDay; //Время
    ConditionHuman? cond;
    ConditionHuman? complaint;
    ConditionHuman? standart;
    ConditionHuman? Consience;
    ConditionHuman? rass;
    ConditionHuman? skins;
    ConditionHuman? hymd;
    ConditionHuman? clr;

    public bool vash { get; set; } = false;
    bool IsSkin;
    protected override async Task OnInitializedAsync()
    {
        cond = new ConditionHuman();
        complaint = new ConditionHuman();
        standart = new ConditionHuman();
        Consience = new ConditionHuman();
        rass = new ConditionHuman();
        skins = new ConditionHuman();
        hymd = new ConditionHuman();
        clr = new ConditionHuman();
    }



}
