@using Re.Core.Models
@using Re.UI.Data
@using CColor = System.Drawing.Color

<MudText Style="text-decoration: underline;" Align="Align.Center">
    Отделение анестезиологии и реанимации с интенсивной терапией (лист назначений)
</MudText>
<MudGrid Style="margin-left: 18px;">
    <MudItem Style="margin: -10px;  display: flex; align-items: center;">
        <label for="fio" style="margin-bottom: -20px; margin-right: 10px; font-size: 12px;">ФИО</label>
        <MudTextField Id="fio" T="string" Style="font-size: 12px; width: 300px;" />

        <label for="age" style="margin-bottom: -20px; margin-right: 10px; font-size: 12px; margin-left: 20px;">Возраст</label>
        <MudTextField Id="age" T="string" Style="font-size: 12px; width: 100px;" />

        <label for="number" style="margin-bottom: -20px; margin-right: 10px; font-size: 12px; margin-left: 20px;">№ и/б.</label>
        <MudTextField Id="number" T="string" Style="font-size: 12px; width: 100px;" />

        <label for="date" style="margin-bottom: -20px; margin-right: 10px; font-size: 12px; margin-left: 20px;">Дата</label>
        <MudDatePicker Id="date" Style="font-size: 12px; width: 100px;" />
    </MudItem>
</MudGrid>
<MudGrid>
    <MudItem Style="margin: -10px; display: flex; align-items: center;">
        <label for="allergy" style="margin-bottom: -20px; margin-right: 10px; font-size: 12px;">Аллергия</label>
        <MudTextField Id="allergy" T="string" Style="font-size: 12px; width: 300px;" />

        <label for="day" style="margin-bottom: -20px; margin-right: 10px; font-size: 12px; margin-left: 20px;">Сутки</label>
        <MudTextField Id="day" T="string" Style="font-size: 12px; width: 100px;" />

        <label for="diet" style="margin-bottom: -20px; margin-right: 10px; font-size: 12px; margin-left: 20px;">Стол</label>
        <MudTextField Id="diet" T="string" Style="font-size: 12px; width: 100px;" />

        <label for="blood" style="margin-bottom: -20px; margin-right: 10px; font-size: 12px; margin-left: 20px;">Гр. крови</label>
        <MudTextField Id="blood" T="string" Style="font-size: 12px; width: 100px;" />
    </MudItem>
</MudGrid>

